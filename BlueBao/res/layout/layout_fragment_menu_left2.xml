<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical" >

    <!-- 上边的 用户头像、用户名、个性签名 -->

    <RelativeLayout
        android:id="@+id/fragment_menu_left_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dip"
        android:layout_marginTop="30dip" >

        <com.itboye.bluebao.exwidget.CircleImageView
            android:id="@+id/fragment_menu_left_top_userimg"
            android:layout_width="@dimen/widthUserImg"
            android:layout_height="@dimen/heightUserImg"
            android:src="@drawable/fragment_menu_left_userimg_default" />

        <TextView
            android:id="@+id/frag_menu_left_tv_username"
            android:layout_width="170dip"
            android:layout_height="30dip"
            android:layout_marginStart="5dip"
            android:layout_toEndOf="@id/fragment_menu_left_top_userimg"
            android:gravity="center"
            android:text="爱运动,享自由"
            android:singleLine="true"
            android:textColor="@color/colorMenuLeftWord"
            android:textSize="@dimen/textsizeFragMenuUsername" />

        <TextView
            android:id="@+id/frag_menu_left_tv_gexingqianming"
            android:layout_width="170dip"
            android:layout_height="30dip"
            android:layout_below="@id/frag_menu_left_tv_username"
            android:layout_marginStart="5dip"
            android:layout_toEndOf="@id/fragment_menu_left_top_userimg"
            android:gravity="center"
            android:text="个性签名"
            android:singleLine="true"
            android:textColor="@color/colorMenuLeftWord"
            android:textSize="@dimen/textsizeFragMenuGXQM" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="20dip"
        android:background="@color/colorMenuLeftLine" >
    </View>

    <!-- 下边的 Items -->


    <!-- 个人资料 -->

    <TextView
        android:id="@+id/frag_menu_left_gerenziliao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightFragMenuItem"
        android:drawableEnd="@drawable/frag_menu_left_item"
        android:gravity="center_vertical"
        android:paddingEnd="10dip"
        android:paddingStart="20dip"
        android:text="个人资料"
        android:textColor="@color/colorMenuLeftWord"
        android:textSize="@dimen/textsizeFragMenuItem" />

    <!-- 设备管理 -->

    <TextView
        android:id="@+id/frag_menu_left_shebeiguanli"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightFragMenuItem"
        android:drawableEnd="@drawable/frag_menu_left_item"
        android:gravity="center_vertical"
        android:paddingEnd="10dip"
        android:paddingStart="20dip"
        android:text="设备管理"
        android:textColor="@color/colorMenuLeftWord"
        android:textSize="@dimen/textsizeFragMenuItem" />

    <!-- 运动数据 -->

    <TextView
        android:id="@+id/frag_menu_left_yundongshuju"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightFragMenuItem"
        android:drawableEnd="@drawable/frag_menu_left_item"
        android:gravity="center_vertical"
        android:paddingEnd="10dip"
        android:paddingStart="20dip"
        android:text="运动数据"
        android:textColor="@color/colorMenuLeftWord"
        android:textSize="@dimen/textsizeFragMenuItem" />

    <!-- 目标管理 -->

    <TextView
        android:id="@+id/frag_menu_left_mubiaoguanli"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightFragMenuItem"
        android:drawableEnd="@drawable/frag_menu_left_item"
        android:gravity="center_vertical"
        android:paddingEnd="10dip"
        android:paddingStart="20dip"
        android:text="目标管理"
        android:textColor="@color/colorMenuLeftWord"
        android:textSize="@dimen/textsizeFragMenuItem" />

    <!-- 关于蓝堡 -->

    <TextView
        android:id="@+id/frag_menu_left_guanyulanbao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightFragMenuItem"
        android:drawableEnd="@drawable/frag_menu_left_item"
        android:gravity="center_vertical"
        android:paddingEnd="10dip"
        android:paddingStart="20dip"
        android:text="关于蓝堡"
        android:textColor="@color/colorMenuLeftWord"
        android:textSize="@dimen/textsizeFragMenuItem" />

    <!-- 购买器材 -->

    <TextView
        android:id="@+id/frag_menu_left_goumaiqicai"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightFragMenuItem"
        android:drawableEnd="@drawable/frag_menu_left_item"
        android:gravity="center_vertical"
        android:paddingEnd="10dip"
        android:paddingStart="20dip"
        android:text="购买器材"
        android:textColor="@color/colorMenuLeftWord"
        android:textSize="@dimen/textsizeFragMenuItem" />

    <!-- 闹铃开关 -->

    <RelativeLayout
        android:id="@+id/acti_config_rl_vibrate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightFragMenuItem"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dip"
            android:text="闹铃开关"
            android:textColor="@color/colorMenuLeftWord"
            android:textSize="@dimen/textsizeFragMenuItem" />

        <ToggleButton
            android:id="@+id/frag_menu_left_tb_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:button="@drawable/ios7_btn"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <!-- 设置 -->

    <TextView
        android:id="@+id/frag_menu_left_shezhi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightFragMenuItem"
        android:drawableEnd="@drawable/frag_menu_left_item"
        android:gravity="center_vertical"
        android:paddingEnd="10dip"
        android:paddingStart="20dip"
        android:text="设置"
        android:textColor="@color/colorMenuLeftWord"
        android:textSize="@dimen/textsizeFragMenuItem" />

    <!-- 注销 -->

    <TextView
        android:id="@+id/frag_menu_left_zhuxiao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightFragMenuItem"
        android:drawableEnd="@drawable/frag_menu_left_item"
        android:gravity="center_vertical"
        android:paddingEnd="10dip"
        android:paddingStart="20dip"
        android:text="注销"
        android:textColor="@color/colorMenuLeftWord"
        android:textSize="@dimen/textsizeFragMenuItem" />

</LinearLayout>