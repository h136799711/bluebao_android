<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jys.bluetoothproj.activity.actifindbtdevice" 
    android:background="@color/ricewhitegb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- top -->
        <!-- 开始：自己的actionbar -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightActiBar"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightActiBarWord"
                android:gravity="center"
                android:text="蓝牙设备"
                android:textColor="@color/colorActionBarWord"
                android:textSize="@dimen/textsizeActiBarWord" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#DCDCDC" >
            </View>
        </LinearLayout>

        <!-- 结束：自己的actionbar -->


        <!-- bottom -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- EditText========================================================= -->

            <EditText
                android:id="@+id/actifindbtdevice_et_localbtinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="本机蓝牙信息"
                android:textSize="18sp" >
            </EditText>

            <EditText
                android:id="@+id/actifindbtdevice_et_alreadyconnectedbtinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="已配对蓝牙设备信息"
                android:textSize="18sp" >
            </EditText>

            <EditText
                android:id="@+id/actifindbtdevice_et_remotebtinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="搜索到的外围蓝牙设备信息"
                android:textSize="18sp" >
            </EditText>

            <!-- 搜索到的外围蓝牙设备显示在此处========================================================= -->

            <LinearLayout
                android:id="@+id/actifindbtdevice_ll_forshowdiscoveredBtDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
            <!-- Button========================================================= -->

            <Button
                android:id="@+id/actifindbtdevice_btn_getlocalbtinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取本地蓝牙设备信息" />

            <Button
                android:id="@+id/actifindbtdevice_btn_getalreadyconnetctedbtinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取已配对蓝牙设备信息" />

            <Button
                android:id="@+id/actifindbtdevice_btn_getremotebinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搜索" />

            <!-- ========================================================= -->
        </LinearLayout>
    </LinearLayout>

</ScrollView>