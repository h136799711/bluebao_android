<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants"
    >

    <!-- 内容部分 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

        <!-- 时间 1/3 -->

        <TextView
            android:id="@+id/frag_tab_target_item_time"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="时间"
            android:textColor="@color/colorTabTargetWord"
            android:textSize="14sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#DCDCDC" >
        </View>

        <!-- 目标 1/3 -->

        <TextView
            android:id="@+id/frag_tab_target_item_goal"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="目标"
            android:textColor="@color/colorTabTargetWord"
            android:textSize="14sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#DCDCDC" >
        </View>

        <!-- 编辑，删除 1/3 -->

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <!-- 编辑 1/3的1/2 -->

            <ImageButton
                android:id="@+id/frag_tab_target_ibtn_edit"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/fragment_tab_target_edit" 
                android:focusable="false"/>

            <!-- 删除 1/3的1/2 -->

            <ImageButton
                android:id="@+id/frag_tab_target_ibtn_delete"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/fragment_tab_target_delete" 
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 下边横线 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#DCDCDC" >
    </View>

</LinearLayout>