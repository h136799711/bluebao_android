<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    android:orientation="horizontal" >

    <!-- 时间 -->
    <TextView
        android:id="@+id/frag_tab_target_item_style_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:hint="时间"
        android:textColor="@color/black" />

    <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#DCDCDC" >
    </View>

    <!-- 目标 -->
    <TextView
        android:id="@+id/frag_tab_target_item_style_aim"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:hint="目标"
        android:textColor="@color/black" />

    <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#DCDCDC" >
    </View>

    <!-- 操作: 编辑、删除 -->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal" >
        <ImageView
            android:id="@+id/frag_tab_target_iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/fragment_tab_target_edit" />
        <ImageView
            android:id="@+id/frag_tab_target_iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/fragment_tab_target_delete" 
            android:layout_marginStart="5dip"/>
    </TableLayout>

    <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#DCDCDC" >
    </View>

</LinearLayout>