<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <declare-styleable name="RoundProcessBar">  
        <attr name="colorCircle" format="color"/>
        
        <attr name="colorProcessBar" format="color"/>
        <attr name="widthProcessBar" format="dimension"></attr>
        
        <attr name="colorAlready" format="color" />  
        <attr name="textSizeAlready" format="dimension" /> 
        
        <attr name="colorPercent" format="color" />  
        <attr name="textSizePercent" format="dimension" /> 
        
         <attr name="colorLine" format="color" />  
        <attr name="heightLine" format="dimension" /> 
        
        <attr name="colorAim" format="color" />  
        <attr name="textSizeAim" format="dimension" /> 
        
        <attr name="colorAimNumber" format="color" />  
        <attr name="textSizeAimNumber" format="dimension" /> 
        
        <attr name="aimNumber" format="integer"></attr> <!-- 目标数值 -->
        <attr name="max" format="integer"></attr> <!-- 进度条最大值 -->
        <attr name="textIsDisplayable" format="boolean"></attr><!-- 是否显示中间不断变化的进度 -->
        <attr name="style"><!-- 空心还是实心圆 -->
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable> 
</resources>